.zui-btn{
	position: relative;
    display: block;
    padding: 0 0.10rem;
    box-sizing: border-box;
    font-size: 0.34rem;
    text-align: center;
    text-decoration: none;
    color: #FFFFFF;
    line-height: 2.55555556;
    border-radius: 5px;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    overflow: hidden;
}
.zui-btn-primary{
	background:$main-color;
	border-radius:0.50rem;
}
.zui-btn-layer{
    background:$main-color;
    border-radius:0.50rem;
    line-height:2.0;
    width: 3.0rem;
    margin:0 auto;
}
.zui-btn-layer-no{
    background:#999999;
    border-radius:0.50rem;
    line-height:2.0;
    width: 2.3rem;
}
.zui-btn-layer-yes{
    background:$main-color;
    border-radius:0.50rem;
    line-height:2.0;
    width: 2.3rem;
}
.zui-btn-plain{
    width: 1.85rem;
    line-height:1.50;
    border:1px solid #e60012;
    color:#e60012;
    margin:0;
    font-size:0.30rem;
    border-radius:10px;
}
.zui-btn-test{
    border:1px solid $main-color;
    background:#fff;
    color:$main-color;
    line-height:1.6;
    padding:0 0.25rem;
}
.zui-btn-see{
    background:#e9e9e9;
    color:$main-font-color;
    line-height:1.6;
    font-size:0.30rem;
    padding:0 0.20rem;
    border-radius:0.30rem;
}
.zui-btn-th{
    background:$main-color;
    color:#fff;
    line-height:1.6;
    font-size:0.30rem;
    padding:0 0.20rem;
    border-radius:0.30rem;
    margin-right:0.20rem;
}
.zui-btn-tx{
    border:1px solid $main-color;
    color:$main-color;
    border-radius:0.30rem;
    line-height:1.5;
    font-size:0.30rem;
    padding:0 0.20rem;
}