@charset "UTF-8";
@import "reset";
@import "mixins";
@import "variable";
@import "common";
html,
body {
    width: 100%;
    height: 100%;
}

#allmap {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 140px;
}
.navigation{
	@include flexbox;
	@include vertical;
	@include horizontal-layout(center);
	-webkit-box-shadow: 0 0 5px #646464;
            box-shadow: 0 0 5px #646464;
	height: 120px;
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	line-height:1.32;
	padding: 10px 20px;
	.name{
		font-size: 16px;
		font-weight: bold;
	}
	.address{
		@include flexbox;
		@include clamp(2);
		color:#646464;
		margin-top:8px;
		margin-bottom:10px;
		font-size:14px;
	}
}
.btn-link{
	border:1px solid #999999;
	text-align: center;
	display:block;
	line-height:2.5;
	border-radius: 5px;
	font-size:14px;
}