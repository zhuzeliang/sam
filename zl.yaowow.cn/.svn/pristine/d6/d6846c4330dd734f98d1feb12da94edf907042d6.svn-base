.product {
    display: block;
    @include flexbox;
    background: #fff;
    padding: 0.30rem;
    line-height:1.3;
    .product-img {
        img {
            display: block;
            width: 2.0rem;
            height: 1.50rem;
        }
    }
    .product-text {
        @include flex(1);
        @include flexbox;
        @include vertical;
        // @include horizontal-layout(center);
        margin-left: 0.20rem;
        color: $sub-font-color;
        .product-text-sub {
            @include flexbox;
            @include vertical-layout(end);
            .product-name {
                @include flex(1);
                @include clamp(1);
                margin-right: 0.20rem;
                font-size: 0.32rem;
            }
            .distance{
            	background: url(/static/images/icon/distance.png) no-repeat left center;
                background-size: 0.28rem;
                padding-left:0.35rem;
                line-height:normal;
            }
        }
        .product-text-star {
        	margin:0.05rem 0;
            font-size: 0;
            @include flex(1);
        	@include flexbox;
        	@include vertical-layout(start);
            .star {
                display: inline-block;
                width: 0.26rem;
                height: 0.26rem;
                background: url(/static/images/icon/star.png) no-repeat center center;
                background-size: 0.26rem;
                margin-right:0.10rem;
            }
            .star-b {
                display: inline-block;
                width: 0.26rem;
                height: 0.26rem;
                background: url(/static/images/icon/star-b.png) no-repeat center center;
                background-size: 0.28rem;
                margin-right:0.10rem;
            }
        }
        .product-text-address{
        	@include clamp(1);
        	margin-bottom:0.03rem;
        }
    }
}