@charset "UTF-8";
@import "reset";
@import "mixins";
@import "variable";
@import "common";
html,
body {
    background: #f8f8f8;
}

.zui-form {
    margin-top: 0.30rem;
}

.zui-cells-right .zui-input {
    text-align: right;
}

.zui-cells {
    position: relative;
    background: #fff;
}

.zui-cell {
    @include flexbox;
    @include vertical-layout(center);
    position: relative;
    padding: 0.30rem 0.30rem;
    font-size: 0.32rem;
    @include border-1px;
    border-bottom-width: 1px;
    background: #fff;
    .zui-cell-bd {
        @include flex(1);
        position: relative;
        .zui-input {
            width: 100%;
            height: 1.425em;
            line-height: 1.425em;
            font-size: inherit;
            background: #fff;
        }
        .zui-select {
            width: 100%;
            height: 100%;
            line-height: 1.425em;
            font-size: inherit;
            background: #fff;
            padding-right: 0.30rem;
        }
        .zui-cell-select {
            position: absolute;
            left: 0;
            top: 0;
            right: 0;
            bottom: 0;
            opacity: 0;
        }
    }
    .zui-cell-hd {
        i{
            font-style:normal;
            color:#d00000;
            display:inline-block;
            width: 0.20rem;
            font-size:0.28rem;
        }
        .et-vcode {
            width: 1.60rem;
            height: 0.60rem;
            display: block;
            margin-left: 0.30rem;
        }
        .zui-hq {
            background: #fff;
            color: $main-color;
            font-size: inherit;
        }
    }
}

//checkbox
.zui-checkbox-box {
    display: inline-block;
    position: relative;
    cursor: pointer;
    .zui-checkbox {
        position: absolute;
        left: -99999px;
    }
    .zui-checkbox-tip {
        display: inline-block;
        width: 18px;
        height: 18px;
        border: 1px solid $main-font-color;
        border-radius:50%;
        position: relative;
        background: #fff;
        vertical-align: middle;
        margin-top: -2px;
        margin-bottom: 1px;
        box-sizing:border-box;
    }
    .zui-checkbox:checked+.zui-checkbox-tip {
        &::after {
            position: absolute;
            content: "\200B";
            display: block;
            width: 8px;
            height: 4px;
            background: transparent;
            left: 50%;
            top: 50%;
            margin-left: -4px;
            margin-top: -4px;
            border-left: 1px solid #000;
            border-bottom: 1px solid #000;
            transform: rotateZ(-45deg);
        }
    }
}