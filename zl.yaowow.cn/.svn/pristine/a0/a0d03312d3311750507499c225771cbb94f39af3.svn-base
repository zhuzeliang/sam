.order{
    @include flexbox;
    padding: 0.30rem;
    line-height:1.32;
    background:#fff;
    .order-img{
        img{
            display:block;
            width: 2.0rem;
            height: 1.5rem;
        }
    }
    .order-text{
        @include flexbox;
        @include vertical;
        @include horizontal-layout(center);
        @include flex(1);
        background:#f8f8f8;
        padding-left: 0.20rem;
        font-size:0.28rem;
        .order-text-main{
            @include clamp(1);
            font-size:0.30rem;
            margin-bottom:0.10rem;
        }
        .order-text-sub{
            @include clamp(1);
            color:$sub-font-color;
            margin-bottom:0.20rem;
        }
    }
}